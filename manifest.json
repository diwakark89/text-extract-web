{
  "manifest_version": 3,
  "name": "Question Text Extractor",
  "version": "1.0",
  "description": "Extracts question text from specific divs on a webpage.",
  "permissions": ["activeTab", "scripting", "storage"],
    "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js", "content-reveal.js"]
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
